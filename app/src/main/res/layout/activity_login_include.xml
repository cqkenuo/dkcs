<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login_include"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@mipmap/icon_bg_login"
    android:visibility="gone"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/Ll_dynamic_login"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_dynamic_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机动态登录"
            android:textColor="@drawable/text_color_selector"
            android:textSize="15sp" />

        <View
            android:id="@+id/login_line1"
            android:layout_width="115dp"
            android:layout_height="2px"
            android:layout_marginTop="15dp"
            android:background="@color/white"></View>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Ll_psw_login"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_psw_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账号密码登录"
            android:textColor="@drawable/text_color_selector"
            android:textSize="15sp" />

        <View
            android:id="@+id/login_line2"
            android:layout_width="115dp"
            android:layout_height="2px"
            android:layout_marginTop="15dp"
            android:background="@color/white"></View>
    </LinearLayout>
</LinearLayout>